<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <fr.ganfra.materialspinner.MaterialSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_ib"
            app:ms_hint="Select IB"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            app:ms_enableFloatingLabel="true"
            app:ms_floatingLabelText="Select IB"
            >
        </fr.ganfra.materialspinner.MaterialSpinner>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ib_profit_textinputlayout"
            android:hint="IB Profit Percentage"
            android:layout_below="@+id/select_ib"
            android:layout_margin="6dp"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ib_profit_txt"
                android:inputType="numberDecimal"
                />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_textinputlayout"
            android:layout_below="@id/ib_profit_textinputlayout"
            android:hint="Name"
            android:layout_margin="6dp"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_txt"
                android:inputType="text"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/father_name_textinputlayout"
            android:layout_below="@+id/name_textinputlayout"
            android:hint="Father Name"
            android:layout_margin="6dp"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/father_name_txt"
                android:inputType="text"
                />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cnic_textinputlayout"
            android:layout_below="@+id/father_name_textinputlayout"
            android:hint="Account no"
            android:layout_margin="6dp"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cnic_txt"
                android:inputType="text"
                />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_textinputlayout"
            android:hint="Email"
            android:layout_below="@+id/cnic_textinputlayout"
            android:layout_margin="6dp"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_txt"
                android:inputType="textEmailAddress"
                />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_textinputlayout"
            android:hint="Password"
            app:passwordToggleEnabled="true"
            android:layout_below="@+id/email_textinputlayout"
            android:layout_margin="6dp"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password_txt"
                android:inputType="textPassword"
                />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/investment_textinputlayout"
            android:hint="Investment"
            android:layout_below="@+id/password_textinputlayout"
            android:layout_margin="6dp"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/investment_txt"
                android:inputType="number"
                />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profit_textinputlayout"
            android:hint="Profit Percentage"
            android:layout_below="@+id/investment_textinputlayout"
            android:layout_margin="6dp"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profit_txt"
                android:inputType="numberDecimal"
                />

        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_date"
            android:layout_below="@+id/profit_textinputlayout"
            android:text="Select Date"
            android:layout_margin="6dp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/investment_period"
            android:hint="Investment Period"
            android:layout_below="@+id/select_date"
            android:layout_margin="6dp"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/investment_period_txt"
                android:inputType="text"
                />

        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

</ScrollView>